<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_ios">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Access"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1D1D1F"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/dialogMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter admin password to override location lock."
        android:textColor="#555555"
        android:textSize="14sp"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="12dp"
        android:background="@drawable/rounded_input_bg"
        android:hint="Admin password"
        android:inputType="textPassword"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/unlockBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#007AFF"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>
